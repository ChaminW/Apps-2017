<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <com.example.arturrinkis.universitystudentrating.CustomControls.SquareImageView
        android:id="@+id/photo_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.20"
        android:src="@drawable/ic_menu_share">
    </com.example.arturrinkis.universitystudentrating.CustomControls.SquareImageView>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.60"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="name name"
            android:textColor="@color/black"
            android:textSize="@dimen/prof_disc_prof_name_text_size">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/university_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/prof_disc_disc_name_text_size"
                android:layout_marginRight="15dp"
                android:text="university">
            </TextView>
            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/prof_disc_disc_name_text_size"
                android:text="course">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/faculty_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/prof_disc_disc_name_text_size"
            android:text="faculty">
        </TextView>
        <TextView
            android:id="@+id/status_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/prof_disc_disc_name_text_size"
            android:text="status">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rating_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="rating"
            android:textColor="@color/black"
            android:textSize="@dimen/prof_disc_prof_name_text_size">
        </TextView>
    </LinearLayout>
</LinearLayout>
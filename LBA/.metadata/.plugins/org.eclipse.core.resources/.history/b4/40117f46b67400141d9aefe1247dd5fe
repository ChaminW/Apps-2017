<script>
	function fnSubmit() {

		if ($('#userpass').val() != $('#cuserpass').val()) {
			alert('Password and confirm password do not match!');
			return;
		}

		var str = $("#contact-form").serialize();
		$
				.post(
						"
<%=request.getContextPath()%>/tiles/ajax.jsp?methodId=requestCab",
			str,
			function(data) {
data=$.trim(data);  
alert(data);
$('#myform')[0].reset();

			});


}
</script>
